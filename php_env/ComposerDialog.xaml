<Controls:MetroWindow x:Class="php_env.ComposerDialog"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:php_env"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        Title="composer安装信息"
        TitleCharacterCasing="Normal"
        Height="420" Width="640"
        GlowBrush="{DynamicResource AccentColorBrush}"
        Icon="icons/info.png">
    <Grid>
        <ScrollViewer Name="scroll" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <TextBlock Name="content" TextWrapping="Wrap" Padding="15" Width="600" FontFamily="Consolas" FontSize="16"/>
        </ScrollViewer>
    </Grid>
</Controls:MetroWindow>
